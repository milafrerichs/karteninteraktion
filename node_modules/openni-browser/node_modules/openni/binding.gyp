{
  'targets': [
    {
      'target_name': 'openni',
      'sources': [
        'src/Callbacks.cc',
        'src/Context.cc'
      ],
      'include_dirs': [
        '/usr/include/ni',
        '/usr/include/nite/'
      ],
      'conditions': [
        ['OS=="mac"', {
            'link_settings': {
                'libraries': [
                    'libOpenNI.dylib',
                    'libXnVNite_1_5_2.dylib',
                    'libXnVHandGenerator_1_5_2.dylib',
                    'libXnVFeatures_1_5_2.dylib'
                ],
            }
          }
        ],
        ['OS=="linux"', {
            'link_settings': {
                'libraries': [
                    '/usr/lib/libOpenNI.so'
                ],
            }
          }
        ]
      ]
    }
  ]
}
